<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_margin="@dimen/dp10">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/iv_blogimages"
        android:src="@drawable/iv_blog1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blog_it_chapter_2"
        android:layout_marginLeft="@dimen/dp5"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/tv_chapters"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="@dimen/dp5">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:id="@+id/tv_director"
                android:layout_height="wrap_content"
                android:text="@string/blog_regina_simpson"
                android:drawableLeft="@drawable/fil"
                android:drawablePadding="@dimen/dp5"
                android:textColor="@color/white"
                android:textSize="14sp"
              />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="10 Sep 2018"
                    android:gravity="right"
                    android:id="@+id/tv_date"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                   />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:text="@string/blog_string"
        android:textColor="@color/white"
        android:id="@+id/tv_desc"
      />
    </LinearLayout>
</LinearLayout>